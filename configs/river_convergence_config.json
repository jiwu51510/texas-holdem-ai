{
  "_comment": "河牌训练收敛控制配置 - 基于设计文档推荐配置",
  
  "iterations": 100000,
  "cfr_iterations_per_update": 1000,
  "network_train_steps": 2000,
  "batch_size": 256,
  "learning_rate": 0.001,
  "checkpoint_dir": "checkpoints/river_convergence",
  "checkpoint_interval": 10000,
  "eval_interval": 5000,
  "network_architecture": [512, 256, 128],
  "regret_buffer_size": 500000,
  "strategy_buffer_size": 500000,
  "initial_stack": 1000,
  "small_blind": 5,
  "big_blind": 10,
  "max_raises_per_street": 4,
  "board": null,
  
  "_convergence_control_comment": "收敛控制相关配置（需求: 1.2, 1.3, 1.4, 3.1, 3.3, 6.1）",
  
